<mp-tabs tabs="{{tabs}}" activeTab="{{activeTab}}" swiperClass="weui-tabs-swiper" bindtabclick="onTabCLick" bindchange="onChange" activeClass="tab-bar-title__selected" tab-underline-color="#E02020">
    <block wx:for="{{tabs}}" wx:key="title">
        <view class="tab-content" slot="tab-content-{{index}}">
            <view wx:if="{{index == 0}}" class="kj_all_list_container">
                <view class="kj_ball_list_container" style="padding: 8px 0;">
                    <!-- 00000----   {{item.title}}  -->
                    <view class="kj_ball_list_icon_container">
                        <image src="../../img/icon/lottery_dlt.png" mode="aspectFit" class="kj_pic_icon" />
                    </view>
                    <view class="kj_ball_list_ball_issue_and_ball">
                        <view class="kj_ball_list_desc_text">
                            <view class="kj_ball_list_desc_text_issue">{{lottery_data[main_type + '_result'].cn_name}}  第{{lottery_data[main_type + '_result'].Fissue}}期</view>
                            <view class="kj_ball_list_desc_text_open_day">{{lottery_data[main_type + '_result'].date_week}}</view>
                            <view class="kj_ball_list_desc_text_open_day">{{lottery_data[main_type + '_result'].open_day}}</view>
                        </view>
                        <view class="kj_ball_list">
                            <view wx:for="{{lottery_data[main_type+'_result'].split_red_balls}}" wx:key="index" class="kj_ball_list_ball_base cwl_ball_add_red red_ball_bg">
                                {{item}}
                            </view>

                            <view wx:for="{{lottery_data[main_type+'_result'].split_bule_balls}}" wx:key="index" class="kj_ball_list_ball_base cwl_ball_add_red blue_ball_bg">
                                {{item}}
                            </view>
                        </view>
                    </view>
                </view>
                <!-- 下面是中奖的注数及金额，中奖规则图形化展示等 -->
                <view class="winning_detail_table">
                    <view class="winning_detail_table_header">
                        <view class="winning_detail_table_head_cell winning_detail_table_head_1">奖项</view>
                        <view class="winning_detail_table_head_cell winning_detail_table_head_2">中奖规则</view>
                        <view class="winning_detail_table_head_cell winning_detail_table_head_3">中奖注数</view>
                        <view class="winning_detail_table_head_cell winning_detail_table_head_4">中奖金额(元)</view>
                    </view>
                    <view class="winning_detail_table_body">
                        <view class="winning_detail_table_row" wx:for="{{prizeGrades}}" wx:key="key" wx:for-index="idx">
                            <view class="winning_detail_table_cell winning_detail_table_head_1">
                                {{prizeGrades[idx]}}
                            </view>
                            <view class="winning_detail_table_cell winning_detail_table_head_2">
                                <image src='../../img/prize_demo/{{main_type}}_prize_{{idx}}.png' mode="widthFix" class="kj_ball_list_prize_demo_pic"></image>
                            </view>
                            <view class="winning_detail_table_cell winning_detail_table_head_3">{{lottery_data[main_type+'_result'].prize_grades[idx-1].stakeCount}}</view>
                            <view class="winning_detail_table_cell winning_detail_table_head_4 winning_detail_table_cell_money">{{lottery_data[main_type+'_result'].prize_grades[idx-1].stakeAmount}}</view>
                        </view>
                    </view>
                </view>
            </view>

            <view wx:else="" style="width: 100%;">
                <block wx:for="{{['dlt', 'pls', 'plw', 'qxc']}}" wx:key="item">
                    <view class="kj_ball_list_container">
                        <view class="kj_ball_list_icon_container">
                            <image src="../../img/icon/lottery_{{item}}.png" mode="aspectFit" class="kj_pic_icon" />
                        </view>
                        <view class="kj_ball_list_ball_issue_and_ball">
                            <view class="kj_ball_list_desc_text">
                                <view class="kj_ball_list_desc_text_issue">{{lottery_data[item + '_result'].cn_name}} 第{{lottery_data[item + '_result'].Fissue}}期</view>
                                <view class="kj_ball_list_desc_text_open_day">{{lottery_data[item + '_result'].date_week}}</view>
                                <view class="kj_ball_list_desc_text_open_day">{{lottery_data[item + '_result'].open_day}}</view>
                            </view>
                            <view class="kj_ball_list">
                              <view wx:for="{{lottery_data[item+'_result'].split_red_balls}}" wx:key="index" wx:for-item='red_ball' class="kj_ball_list_ball_base cwl_ball_add_red {{ item=='dlt' || item=='qxc' ? 'blue_ball_bg':'red_ball_bg'  }}">
                                {{red_ball}}
                              </view>
                              
                              <view wx:for="{{lottery_data[item+'_result'].split_bule_balls}}" wx:key="index" wx:for-item='red_ball' class="kj_ball_list_ball_base cwl_ball_add_red yellow_ball_bg">
                                {{red_ball}}
                              </view>
                            </view>
                        </view>
                    </view>

                </block>
            </view>
        </view>
    </block>
</mp-tabs>

