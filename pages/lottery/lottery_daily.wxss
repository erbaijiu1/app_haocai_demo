/* 中奖详情列表 */
.winning_detail_table{
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
    background: #fff;
}
.winning_detail_table_header{
    display: flex;
    background-color: #E02020;
    color: #fff;
}

.winning_detail_table_head_cell{
    padding: 3px;
    border-right: 1px solid #ddd;
    text-align: center;
    width: 25%;
    font-size: 12px;
}

.winning_detail_table_head_1{
    width: 20%;
}
.winning_detail_table_head_2{
    width: 35%;
}
.winning_detail_table_head_3{
    width: 20%;
}
.winning_detail_table_head_4{
    width: 25%;
}

.winning_detail_table_cell{
    padding: 3px 2px;
    border-bottom: 1px solid #ccc;
    border-right: 1px solid #ccc;
    text-align: center;
    /* width: 25%; */
    font-size: 12px;
    min-height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.winning_detail_table_cell_money{
    color: #E02020;
    /* font-family: fantasy; */
    font-weight: 800;
}

.winning_detail_table_row{
    display: flex;
    /* height: auto; */
