@import '../common.wxss';

page{
    background-color: #FFFFFF;
    height: 100%;
    /* font-size: 14px; */
}

.weui-tabs-bar__wrp {
    border-bottom: 1px solid #eee;
    margin-top: 10px;
}

.weui-tabs-swiper {
    width: 100%;
    height: 700px;
}

.tab-content {
    height: 700px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 40rpx;
}

.weui-tabs-bar__title {
    margin: 0px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}

.weui-tabs-bar__item{
    width: 50%;
    text-align: center;
}

.tab-bar-title__selected{
    width: 100%;
}

.kj_all_list_container{
    height: 100%;
    width: 100%;
}
.kj_pic_icon{
    width: 100rpx;
    height: 100rpx;
}

.kj_ball_list{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap; /* 添加这一行 */
}

.kj_each_ball{
    margin: 0 10px;
}

.kj_ball_list_container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.kj_ball_list_icon_container{
    height: 100rpx;
    margin: 5px;
}

.kj_ball_list_desc_text{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.kj_ball_list_desc_text_issue{
    font-size: 11px;
    color: #4a4a4a;
    font-weight: bold; /* 让文字加粗 */
}
.kj_ball_list_desc_text_open_day{
    font-size: 11px;
    color: #525252;
}

/* 中奖详情列表 */
.winning_detail_table{
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
}
.winning_detail_table_header{
    display: flex;
    background-color: #E02020;
    color: #fff;
}

.winning_detail_table_head_cell{
    padding: 3px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    width: 25%;
}

.winning_detail_table_cell{
    padding: 5px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    width: 25%;
    font-size: 10px;
}

.winning_detail_table_cell_money{
    color: #E02020;
}

.winning_detail_table_row{
    display: flex;
    height: auto;
    align-items: center;
}
.winning_detail_table_row:nth-child(even) {
    background-color: #f2f2f2;
  }

.kj_ball_list_prize_demo_pic{
    width: 100%;
    height: 100%;
    /* height:auto; */
}